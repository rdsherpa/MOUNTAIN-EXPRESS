    <section class="flex items-center flex-col">
      <h2 class="text-4xl self-start">Book your transportation:</h2>
      <form class="border-zinc-900 border-4 w-2/4 mt-4 bg-zinc-100" id = "booking">
        <div class="flex justify-around">
          <div class="flex justify-center gap-2">
            <input type="radio" name="trip" id="trip" value="one-way" />
            <p>One Way</p>
          </div>

          <div class="flex justify-center gap-2">
            <input type="radio" name="trip" id="trip" value="round-trip" />
            <p>Round trip</p>
          </div>
        </div>

        <div class="grid grid-cols-2 p-4 gap-2">
          <input
            type="text"
            placeholder="From" 
            class="border-zinc-900 border-2 p-4"
            id = "from"
          />
          <input
            type="text"
            placeholder="To"
            class="border-zinc-900 border-2"
            id = "to"
          />
        </div>

        <div class="grid grid-cols-2 p-4 gap-2">
          <input 
            type="date" 
            class="border-zinc-900 border-2 p-4"
            id = "userDate"
          />
          <input 
            type="datetime" 
            class="border-zinc-900 border-2 p-4"
            id ="userDateTime" 
          />
        </div>

        <div class="grid grid-cols-1 p-4">
          <input
            type="number"
            placeholder="No. of passengers"
            class="border-zinc-900 border-2 p-4"
            id = "passengers"
          />
        </div>
        <div class = "grid grid-cols-2 p-4 justify-items-end">
          <div></div>
          <button
          type="submit"
          class="border-zinc-900 border-2 p-4 w-[200px] bg-[rgb(223,239,253)] hover:text-white">
          Continue
          </button>
        </div>
      </form>
    </section>
    <script src="./public/javascript/booking.js"></script>
