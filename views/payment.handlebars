<section class="flex items-center flex-col mb-16">
    <h2 class="font-bold text-sky-700 text-4xl self start">Billing Information</h2>
    <form class="border-sky-800 rounded-md border-4 md:w-2/4 w-[90%] mt-4 bg-zinc-100" id="payment-form">
        <div class="flex justify-start flex-col p-4 gap-2 my-2">
            <p class="font-bold text-sky-800">First Name:</p>
            <input 
            class="form-input border-sky-100 border-2 p-4"
            type="text"
            id="first-name"/>
        </div>

        <div class="flex justify-start flex-col p-4 gap-2 my-2">
            <p class="font-bold text-sky-800">Last Name:</p>
            <input 
            class="form-input border-sky-100 border-2 p-4"
            type="text"
            id="last-name"/>
        </div>

         <div class="flex justify-start flex-col p-4 gap-2 my-2">
            <p class="font-bold text-sky-800">Credit Card No.</p>
            <input 
            class="form-input border-sky-100 border-2 p-4"
            type=""
            id="credit-number"/>
        </div>

        <div class="flex items-center justify-center">
            <button
                type="submit"
                class="text-white bg-amber-500 rounded-md border-2 p-4 m-4 md:m-0 w-[100%] m-2 md:mb-4 pr-4 hover:bg-amber-400"
                >
                Submit Payment
            </button>
        </div>

    </form>

</section>

<script src="javascript/payment.js"></script>